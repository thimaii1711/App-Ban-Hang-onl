<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            android:elevation="12dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/img_user_adminchat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: " />

                <TextView
                    android:id="@+id/id_user_adminchat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="0001" />
            </LinearLayout>


            <TextView
                android:id="@+id/name_user_adminchat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:text="User 0001"
                android:textSize="24dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/lastsender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn: "
                    android:textColor="@color/line_chat" />

                <TextView
                    android:id="@+id/lastmess_user_adminchat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chào"
                    android:textColor="@color/line_chat" />

                <TextView
                    android:id="@+id/lastdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" • 00:00"
                    android:textColor="@color/line_chat" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>